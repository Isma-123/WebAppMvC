@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutApp.cshtml";
}

<div class="vh-100 d-flex justify-content-center align-items-center"
     style="background: linear-gradient(135deg, #6a11cb, #2575fc);">

    <div class="card shadow-lg p-5" style="width: 380px; border-radius: 25px; background-color: rgba(255,255,255,0.95); transition: transform 0.3s;">

        <div class="text-center mb-4">
            <i class="bi bi-person-circle fs-1 text-success"></i>
            <h2 class="mt-2 text-success fw-bold">Welcome Back</h2>
            <p class="text-muted small">Sign in to your account</p>
        </div>

        <form id="frmAccess" novalidate>
            <div class="mb-3 position-relative">
                <label for="_usuario" class="form-label fw-semibold">User</label>
                <input type="text" id="_usuario" name="user" class="form-control form-control-lg" placeholder="Enter your email" required />
                <i class="bi bi-person position-absolute top-50 end-0 translate-middle-y me-3 text-muted"></i>
            </div>

            <div class="mb-4 position-relative">
                <label for="_password" class="form-label fw-semibold">Password</label>
                <input type="password" id="_password" name="password" class="form-control form-control-lg" placeholder="Enter your password" required />
                <i class="bi bi-lock position-absolute top-50 end-0 translate-middle-y me-3 text-muted"></i>
            </div>

            <div id="alertBox" class="alert alert-danger d-none small text-center py-2"></div>

            <div class="d-grid mb-3">
                <button type="submit" class="btn btn-success btn-lg fw-semibold">Sign In</button>
            </div>

            <div class="text-center">
                <a href="@Url.Action("ForgotPassword", "Access")" class="text-decoration-none small text-primary">Forgot Password?</a>
            </div>
        </form>
    </div>
</div>

@section scripts {
    <script>
        $(document).ready(function () {
            // Hover animation on card
            $(".card").hover(
                function () { $(this).css("transform", "scale(1.03)"); },
                function () { $(this).css("transform", "scale(1)"); }
            );

            $("#frmAccess").submit(function (e) {
                e.preventDefault();

                var url = '@Url.Action("Enter", "Access")';
                var form = $(this).serialize();

                $("#alertBox").addClass("d-none").text("");

                $.post(url, form, function (data) {
                    if (data === "1") {
                        window.location.href = '@Url.Content("~/")';
                    } else {
                        $("#alertBox").removeClass("d-none").text(data);
                    }
                }).fail(function () {
                    $("#alertBox").removeClass("d-none").text("An unexpected error occurred. Please try again.");
                });
            });
        });
    </script>
}
